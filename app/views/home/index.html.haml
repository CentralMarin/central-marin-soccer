
%div{class: 'grid_6'}
  %h1= t('home.title')
  %p= t('home.overview')
  %hr
  %h2{class: 'alt'}= t('home.program.heading')
  %p= t('home.program.body')
  %a{class: 'right', href: '/information'}= t('home.program.link')

%div{id: 'slider-container', class: 'grid_10 box'}
  %div{class: 'ws_images'}
    - @articles.each do |article|
      =image_tag (article.image)
  %div{class: 'ws_bullets'}
    - @articles.each do |article|
      %a{href: '#'}
        %h2{class: 'alt'}= article.title
        %span= strip_tags(truncate(article.body, length: 50, truncate_string: "..."))

%div{class: 'padV10 clear'}

%div{class: 'grid_10'}
  %div{class: 'box'}
    %h2= t('home.donate.heading')
    %p= t('home.donate.body')

    %form{class: 'right', action: 'https://www.sandbox.paypal.com/cgi-bin/webscr', method: 'post'}
      %input{type: 'hidden', name: 'cmd', value: '_s-xclick'}
      %input{type: 'hidden', name: 'hosted_button_id', value: 'TVEPGNRXXD2YN'}
      %input{type: 'image', src: 'https://www.sandbox.paypal.com/en_US/i/btn/btn_donateCC_LG.gif', border:'0', name: 'submit', alt: 'PayPal - The safer, easier way to pay online!' }
      %img{alt:'', border:'0', src:'https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif', width:'1', height:'1'}

    %div{class: 'clear'}

  %div{class: 'box'}
    %h2= t('home.sponsors.heading')
    %p{class: 'text-center'}
      %img{class: 'pad5', src: '/assets/sample_sponsors1.png'}
      %img{class: 'pad5', src: '/assets/sample_sponsors2.png'}
      %img{class: 'pad5', src: '/assets/sample_sponsors3.png'}
      %img{class: 'pad5', src: '/assets/sample_sponsors4.png'}

%div{id: 'field_status', class: 'grid_6 box relative'}
  %div{class: 'bg_inlay'}
  %div{class: 'relative'}
    %h2= t('home.fields.heading')
    %ol{class: 'block'}
      - @fields_status.each_with_index do |(status, count), index|
        %li{class: ('odd' unless index % 2 == 0)}
          %div{class: 'grid_3'}= status
          %div{class: 'grid_2 text-center'}= count
          %div{class: 'clear'}
    %div{class: 'clear'}
    %h4{class: 'alt'}= t('home.fields.body')
    = link_to t('home.fields.link'), fields_path, class: 'right'
    %div{class: 'clear'}
%div{class: 'clear'}

- content_for :javascript do
  = javascript_include_tag 'home'
