  <title><%= t 'title'%></title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

    <!-- JavaScript at the bottom for fast page loading -->
    <%= stylesheet_link_tag "application" %>
    <%= yield :css %>


    <style>
        .box {
            border: 1px solid #666;
            overflow: hidden;
        }
        .section {

        }
        .section_header {
            min-height: 53px;
            padding: 0;
            margin: 0 0 10px 0;
            background: #E5F4FA url('section_header.png');
        }
        .section_header h2 {
            padding: 0 0 0 10px;
        }
    </style>

  <!-- More ideas for your <head> here: h5bp.com/d/head-Tips -->

  <!-- All JavaScript at the bottom, except for Modernizr / Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
    <%= javascript_include_tag "modernizr-2.0.6.js" %>
    <%= csrf_meta_tags %>
</head>
<body class="<%= body_classes.join(' ') %>">

  <div class="container_12" id="container">
    <header>
      <div class="grid_12"><%= image_tag "masthead.jpg", :width => "940", :height => "90" %></div>
        <div class="grid_12">
            <div id="menu" class="menu">
                <ul class="grid_10">
                    <%= menu %>
                </ul>
                <ul class="grid_2">
                    <%= link_to t('menu.language').html_safe, "http://#{AppConfig[:switch_hosts][I18n.locale]}", :class => 'width:100%; text-align:right'%>
                </ul>
            </div>
        </div>
    </header>
    <div id="main" role="main">
      <%= yield %>
    </div>
    <footer>
        <!--<div class="grid_12"><div class="section_header"><h2>Affiliated Clubs</h2></div></div>-->
