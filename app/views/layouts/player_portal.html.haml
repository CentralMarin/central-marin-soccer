<!doctype html>
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Player Portal
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}/
    %meta{:content => "width=device-width", :name => "viewport"}/
    %link{:href => "assets/img/favicon.ico", :rel => "icon", :type => "image/png"}
    = stylesheet_link_tag "player_portals"
    = yield :css
    = csrf_meta_tags
  %body
    .image-container.set-full-height

      %nav.navbar.navbar-default{role: "navigation"}
        .navbar-header
          %button.navbar-toggle{type: "button", data: {target: "#navbarCollapse", toggle: "collapse"} }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .navbar-brand
            = image_tag "logo.png", width: 86, height: 100


        #navbarCollapse.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{href: "#{player_portal_path}"} Home
            %li
              %a{href: "#{player_portal_registration_path}"} Registration
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: "#{player_portal_logout_path}"} Logout

      / Big container
      .container
        = yield

  = javascript_include_tag "player_portals"
  = yield :javascript

  :javascript
      // Google Analytics
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', "#{analytics_tracking_id}", 'auto');
      ga('send', 'pageview');

