<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
    <th>Carousel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.body.html_safe %></td>
    <td><%= article.author %></td>
    <td><%= article.carousel %></td>
    <td><%= link_to 'Show', article %></td>
  </tr>
<% end %>
</table>

