<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
    <th>Carousel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news_items.each do |news_item| %>
  <tr>
    <td><%= news_item.title %></td>
    <td><%= news_item.body.html_safe %></td>
    <td><%= news_item.author %></td>
    <td><%= news_item.carousel %></td>
    <td><%= link_to 'Show', news_item %></td>
  </tr>
<% end %>
</table>

