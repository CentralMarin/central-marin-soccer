= semantic_form_for [:admin, @web_part], :html => {:multipart => true} do |f|

  = f.inputs do
    = f.input :name

    .language-tabs
      %ul.language-selection
        - @web_part.translations.each do |lang|
          %li= link_to ADDITIONAL_LOCALES[lang.locale.to_sym], "#lang-#{lang.locale}"

      = f.semantic_fields_for :translations do |lf|
        %div{:id => "lang-#{lf.object.locale}", :style => 'padding: 0;'}
          = f.inputs do
            = lf.input :html, :as => :ckeditor, :input_html => {:ckeditor => {:toolbar => 'Full', :language => "#{lf.object.locale}", :scayt_sLang => "#{SPELLCHECK_LANGUAGES[lf.object.locale.to_sym]}"}}
            = lf.input :locale, :as => :hidden

  = f.actions do
    = f.action :submit, :label => true
    = f.action :cancel, :as => :link, :label => I18n.t('active_admin.cancel'), :wrapper_html => { :class => 'cancel' }

:javascript
  $('.language-tabs').tabs();