
= image_tag (@news_item.image) unless (@news_item.image.blank?)
%h1= @news_item.image

%div.language-tabs
  %ul.language-selection
    - @news_item.translations.each do |lang|
      %li= link_to ADDITIONAL_LOCALES[lang.locale.to_sym], "#lang-#{lang.locale}"

  - @news_item.translations.each do |lang|
    %div{:id => "lang-#{lang.locale}"}
      %h3= lang.title
      %p= lang.body.html_safe

%ul
  %li= "Category: #{@news_item.category.to_s}"
  - unless @news_item.subcategory_id != ''
    %li= Team.to_team_name_with_coach(@news_item.subcategory_id)
  - if @news_item.carousel
    %li= "Show in carousel"
  %li= "Created at #{@news_item.created_at}"
  %li= "Last updated #{@news_item.updated_at}"

:javascript
  $('.language-tabs').tabs();