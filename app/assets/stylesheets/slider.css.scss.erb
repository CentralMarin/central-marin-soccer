/*
 * Slider
 */

$slider-width: <%= ArticleIMAGE_WIDTH%>px;
$slider-height: <%= Article::IMAGE_HEIGHT%>px;

* html #slider-container{ width:$slider-width; height: $slider-height; }
* html #slider-container a.ws_next,* html #slider-container a.ws_prev{display:block}
#slider-container:hover a.ws_next, #slider-container:hover a.ws_prev {display:block}
@keyframes wsBasic{0%{left:-0%} 16.67%{left:-0%} 33.33%{left:-100%} 50%{left:-100%} 66.67%{left:-200%} 83.33%{left:-200%} }
@-moz-keyframes wsBasic{0%{left:-0%} 16.67%{left:-0%} 33.33%{left:-100%} 50%{left:-100%} 66.67%{left:-200%} 83.33%{left:-200%} }
@-webkit-keyframes wsBasic{0%{left:-0%} 16.67%{left:-0%} 33.33%{left:-100%} 50%{left:-100%} 66.67%{left:-200%} 83.33%{left:-200%} }

#slider-container {
  /*overflow: hidden;*/
  zoom: 1;
  position: relative;
  width:$slider-width;
  height: $slider-height;
  margin:0px auto 0px;
  z-index:90;
  border: none;
  text-align: left; /* reset align=center */

  a.ws_next, a.ws_prev {
    font-family: Tahoma,Arial,Helvetica;
    font-size: 14px;
    position:absolute;
    display:none;
    top:50%;
    margin-top:-15px;
    line-height:30px;
    z-index:60;
    background-color: #000000;
    color: #FFFFFF;
    padding: 0px 10px;
    opacity:0.7;
    filter:progid:DXImageTransform.Microsoft.Alpha(opacity=70);
  }

  a.ws_next {
    right: 0;
  }

  a.ws_prev {
    left: 0;
  }

  a {
    text-decoration: none;
    outline: none;
    border: none;
  }

  img {
    max-width: none !important;
  }

  .ws_images {

    position: relative;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;

    a {
      width: 100%;
      display: block;
      color: transparent;
    }

    img {
      width: 100%;
      border: none 0;
      max-width: none;
      padding: 0;
    }

    ul {
      position: relative;
      width: 10000%;
      height: auto;
      left: 0;
      list-style: none;
      margin: 0;
      padding: 0;
      border-spacing: 0;
      overflow: visible;

      li {
        width: 1%;
        line-height: 0;
        float: left;
        font-size: 0;
        padding: 0 0 0 0 !important;
        margin: 0 0 0 0 !important;
      }
    }
  }

  .ws-title {
    position: absolute;
    bottom:0;
    left: 0;
    margin-right:5px;
    z-index: 50;
    background-color:#000000;
    color:#FFFFFF;
    padding:10px 1%;
    width:98%;
    font-family: Tahoma,Arial,Helvetica;
    font-size: 14px;
    opacity:0.55;
    filter:progid:DXImageTransform.Microsoft.Alpha(opacity=55);

    div {
      padding-top:5px;
      font-size: 12px;
    }

    ul {
      animation: wsBasic 12s infinite;
      -moz-animation: wsBasic 12s infinite;
      -webkit-animation: wsBasic 12s infinite;
    }
  }

  .ws_bullets {
    font-size: 0px;
    float: left;
    position: absolute;
    z-index: 70;
    padding: 10px;
    bottom: 0;
    left: 50%;

    .ws_bulframe {
      display:none;
      bottom:25px;
      overflow:visible;
      position:absolute;
      cursor:pointer;
      border: 2px solid #B8C4CF;
    }

    a {
      margin-left: 5px;
      height: 10px;
      width: 10px;
      float: left;
      border: 1px solid #B8C4CF;
      color: transparent;
      text-indent: 0px;
      background-image:url("data:image/gif;base64,");
      position: relative;

      img {
        text-indent:0;
        display:block;
        bottom:12px;
        left:-37px;
        visibility:hidden;
        position:absolute;
        border: 2px solid #B8C4CF;
        max-width:none;
      }
    }

    a:hover {
      img {
        visibility:visible;
      }
    }

    div {
      position: relative;
      float: left;
      left: -50%;
    }

  }

  .wsl {
    display: none;
  }

  .ws_bulframe {
    div {
      div {
        height:48px;
        overflow:visible;
        position:relative;
      }

      span {
        position:absolute;
      }

      left:0;
      overflow:hidden;
      position:relative;
      background-color:#B8C4CF;
      width:74px;
    }
  }

  .ws_selbull {
    background-color: #B8C4CF;
    color: #FFFFFF;
  }

  .ws_overbull, .ws_bullets a:hover {
    background-color: #dae9f6;
    color: #FFFFFF;
  }

  sound, object {
    position: absolute;
  }
}